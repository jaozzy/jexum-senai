@{
    ViewData["Title"] = "Login";
}

@model tcc_chat.Models.UsuarioModel

<form method="post">
    <div class="form-group">
        <label class="visually-hidden" asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" type="email" name="Email" placeholder="Email" required/>
    </div>
    <div class="form-group">
        <label class="visually-hidden" asp-for="Senha">Senha</label>
        <input class="form-controll" asp-for="Senha" type="password" name="Senha" placeholder="Senha" required/>
    </div>
    <button type="submit">Entrar</button>
</form>