@{
    ViewData["Title"] = "Reportar um Bug";
}

@model tcc_chat.Models.EmailModel;

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/email.js"></script>

<div class="text-center">
    <h1>@ViewData["Title"].</h1>
    <form asp-action="ValidarReport" method="post">
        <div class="form-group">
            <label asp-for="Titulo">Título</label>
            <input class="form-control" type="text" id="titulo" name="Titulo" required placeholder="Qual o problema encontrado?"/>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Descricao">Descrição</label>
            <textarea type="text" class="form-control" id="descricao" name="Descricao" placeholder="Descreva o problema." required autocomplete="off"></textarea>
        </div>
        <input type="submit" value="Reportar">
    </form>    
</div>